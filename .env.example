# Device settings
DEVICE=mps
MAX_GPU_MEMORY=8GiB

# API settings
API_TOKEN=your-secret-token
HOST=0.0.0.0
PORT=8000

# LLM settings
LOCAL_MODEL_PATH=./models
MODEL_DIR=./models
MODEL_PARTS_PATTERN=qwen2.5-7b-instruct-q4_0-0000{}-of-0000{}.gguf
MODEL_PARTS_COUNT=2
SPLIT_MODE=1
USE_LOCAL_MODEL=True
MODEL_CONTEXT_LENGTH=2048
MODEL_GPU_LAYERS=-1

# Aliyun fallback settings
ALIYUN_ACCESS_KEY=
ALIYUN_SECRET_KEY=
ALIYUN_REGION=cn-hangzhou

# Embedding settings
EMBEDDING_MODEL=BAAI/bge-small-en

# Queue settings
MAX_QUEUE_SIZE=100
WORKERS=2

# Vector store settings
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=handbook
QDRANT_VECTOR_SIZE=384
